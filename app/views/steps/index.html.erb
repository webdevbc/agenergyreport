<p id="notice"><%= notice %></p>

<h1>Steps</h1>

<table class='table table-sm'>
  <thead>
    <tr>
      <th>Name</th>
      <!-- <th>Cost</th> -->
      <th>Energy</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Source</th>
      <th>Notes</th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.name %></td>
        <!-- <td><%# step.cost %></td> -->
        <td><%= "#{step.energy_units_used} #{step.energy_unit.unit_short} #{step.energy_unit.name.downcase}" %></td>
        <td><%= step.category %></td>
        <td><%= step.subcategory %></td>
        <td><%= link_to step.source_text, step.source_url unless step.source_text.blank?%></td>
        <td><%= step.notes %></td>
        <td>
          <%# link_to 'Show', step %>
          </td>
          <td>
            <%# link_to 'Edit', edit_step_path(step) %>
            </td>
            <td>
              <%# link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Step', new_step_path %>
